<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>com.devops.calculator.addition</groupId>
	<artifactId>Addition</artifactId>
	<version>1.0.0-SNAPSHOT</version>
	<packaging>jar</packaging>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<configuration>
					<archive>
						<manifest>
							<mainClass>com.devops.calculator.main.MainClass</mainClass>
							<!-- java -jar target/Addition-1.0.0-SNAPSHOT.jar -->
						</manifest>
					</archive>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.7.0</version>
				<configuration>
					<verbose>false</verbose>
					<fork>true</fork>
					<executable>${JdkExe}</executable>
					<compilerVersion>1.8</compilerVersion>
				</configuration>
			</plugin>
		</plugins>
	</build>
	
	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>3.8.1</version>
			<scope>test</scope>
		</dependency>
	</dependencies>
	<profiles>
		<profile>
			<id>windows</id> <!-- this profile will be executed only on windows machines or mvn clean install -P windows -->
			<activation>
				<os>
					<family>windows</family>
				</os>
			</activation>
			<properties>
				<JdkExe>C:\Program Files\Java\jdk1.8.0_171\bin\javac</JdkExe>
			</properties>			
		</profile>
		<profile>
			<id>unix</id> <!-- this profile will be executed only on unix family machines or mvn clean install -P unix -->
			<activation>
				<os>
					<family>unix</family>
				</os>
			</activation>
			<properties>
				<JdkExe>/usr/java/jdk1.8.0_131/bin/javac</JdkExe>
			</properties>
		</profile>
	</profiles>
</project>
